{
  "name": "careiq-ta",
  "version": "1.2.0",
  "description": "Starter project to write and debug CareIQ with Playwright",
  "scripts": {
    "prepare": "is-ci || husky install",
    "pretest": "rm -r -f test-results/* & rm -r -f html-report/ & rm -r -f xml-report/",
    "build": "npx tsc --project tsconfig.json",
    "gherkin-lint": "npx gherkin-lint .",
    "eslint": "npx eslint .",
    "postinstall": "npx playwright install",
    "test": "npm run pretest & cross-env org=QA npx playwright test",
    "debug": "npm run pretest & cross-env org=QA npx playwright test --headed"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@inquirer/prompts": "^1.1.3",
    "typescript": "4.8.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.37.1",
    "@types/fs-extra": "9.0.12",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "4.14.184",
    "@types/node": "14.18.28",
    "@types/prettier": "^2.7.0",
    "@types/randomstring": "^1.1.8",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "commander": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-playwright": "^0.16.0",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "inquirer": "^9.2.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "open": "^8.4.0",
    "prettier": "2.7.1",
    "randomstring": "^1.3.0",
    "tsc-files": "^1.1.4"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npx prettier --write",
      "git add ."
    ],
    "src/**/*.ts": [
      "npx eslint --fix",
      "npx eslint",
      "npx tsc-files --noEmit"
    ]
  }
}
